<%- include('./layout/header.ejs') %> 
  
<div class="container">

   <!-- Jumbotron Header -->
   <header class="jumbotron mb-3 text-center" id="header" style="background: #dbe1e2;">
    <h1 class="display-3 lead-1">A Warm Welcome!</h1>
    <p class="lead-2">A warm welcome and lots of good wishes on becoming part of our growing team. Congratulations and on behalf of all the members. We are all happy and excited about your inputs and contribution to our Network.</p>
    <!-- <a href="#" class="btn btn-primary btn-lg">Call to action!</a> -->
  </header>
</div>

<div id="portfolio-wrapper">
    <div class="container">
      <div class="row text-center">
        <% videos.forEach(video => { %>
          <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
              <a href="/<%= video.path %>" title="Add Description">
              <img class="card-img-top" src="/<%= video.path %>" alt="">
              <div class="card-body">
                <h4 class="card-title" style="text-decoration: none;"><%= video.name.split('.')[0] %></h4>
                <p class="card-text">published: <%= new Date(Number(video.publishDate)).getDate() %>/<%= new Date(Number(video.publishDate)).getDay() %>/<%= new Date(Number(video.publishDate)).getFullYear() %></p>
              </div>
              <div class="card-footer">
                <span class="btn btn-primary" style="background-color: #007bff; color: #fff;">View</span>  
              </div>
              </a>
            </div>
          </div>
        <% }) %> 
      </div>
  </div>
</div>
<%- include('./layout/footer.ejs') %> 














